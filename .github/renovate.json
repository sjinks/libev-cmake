{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>sjinks/.github:renovate-config"
  ],
  "baseBranches": ["master", "test"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^README\\.md$"],
      "matchStrings": [
        "https://github\\.com/(?<depName>[^{}()\\[\\]]+?)/releases/download/(?<currentValue>[^/]+?)/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^CMakeLists.txt$"],
      "matchStrings": [
        "datasource=(?<datasource>[^ ]+) depName=(?<depName>\\S+)\\s+set\\(.*?_VERSION \"(?<currentValue>[^\"]+)\""
      ]
    }
  ],
  "customDatasources": {
    "libev-attic": {
      "defaultRegistryUrlTemplate": "http://dist.schmorp.de/libev/Attic/",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.libev-attic"],
      "extractVersion": "libev-(?<version>.+)\\.tar\\.gz$"
    }
  ]
}
